<% if @tasks.any? %>
<div class="row">
    <% @tasks.each do |task| %>
      <div class="col-sm-6">
        <div class="task-<%= task.id %>">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"> <%= task.title %> </h5>
              <h6 class="card-subtitle mb-2 text-muted">Created: <%= task.created_at %> </h6>
              <h6 class="card-subtitle mb-2 text-muted">Due by: <%= task.due_date %> </h6>
              <p class="card-text"> <%= task.description %> <p>
              <a href="/tasks/<%= task.id %>" class="card-link">View Task</a>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else  %>
  <h2>There are currently no tasks in the system.</h2>
<% end %>
