<h1>Create a new user</h1>
<%= form_with(model: @user) do |f| %>
<div class="card">
  <div class="card-body">
    <div class="mb-3">
      <%= f.label :name, { class: "form-label"} %>
      <%= f.text_field :name, { class: "form-control", placeholder: "John Doe", required: true } %>
    </div>
    <div class="mb-3">
      <%= f.label :job, { class: "form-label"} %>
      <%= f.text_field :job, { class: "form-control", placeholder: "Software Engineer", required: true } %>
    </div>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
</div>
<% end %>
